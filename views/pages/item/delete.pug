extends ../../layout

block content
  div(class='col-md-6')
    form(id='item-add-form' name='item-delete-form' class='form-horizontal' method="POST" action='')
      input(id='id' type="hidden" name='id' value=item.id class='form-control')
      div(class='form-group')
        div(class='col-md-12') id - #{item.id}
        div(class='col-md-12') name - #{item.name}
        div(class='col-md-12') contry - #{item.contry}
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Delete